{
	"name": "tslint",
	"description": "Lint TypeScript files using tslint",
	"version": "0.0.1",
	"publisher": "eg2",
	"categories": [
		"Languages",
		"Linters"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-tslint.git"
	},
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-tslint/issues"
	},
	"engines": {
		"vscode": "0.10.x"
	},
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:typescriptreact"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "TSLint configuration",
			"properties": {
				"tslint.enable": {
					"type": "boolean",
					"default": true,
					"description": "Control whether tslint is enabled for JavaScript files or not."
				},
				"tslint.options": {
					"type": "object",
					"default": {},
					"description": "The tslint options object to provide args to the tslint command."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"vscode": "0.10.x"
	},
	"dependencies": {
		"vscode-languageclient": "0.10.x"
	}
}